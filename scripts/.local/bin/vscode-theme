#!/bin/node

/*
  Set the theme for visual studio code
  based on the given argument.
  Taken from https://github.com/sandygk/dotfiles
*/

var arg = process.argv[2];
var path = "/home/semyonz/.config/Code/User/settings.json";
var settings = require(path);

if(arg === "--dark" || arg === "-d")
  settings["workbench.colorTheme"] = "Gruvbox Dark Soft";

else if(arg === "--light" || arg=== "-l")
  settings["workbench.colorTheme"] = "Capo-Light";

else {
  console.error("Invalid use");
  return;
}

const fs = require('fs');
try {
  fs.writeFileSync(path, JSON.stringify(settings, null, 4));
} catch (err) {
  console.error(err);
}